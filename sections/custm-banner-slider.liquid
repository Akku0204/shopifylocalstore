   <div class="main_second_section">
        <h2>{{ section.settings.heading }}</h2>
        <div class="img_text">
            <img class="bannerimg" src="{{ section.settings.image | img_url:""}}" alt="image">
            <div class="text alignment_{{ section.settings.vertical_alignment }}">
               <button>{{ section.settings.para }}</button> 
            </div>
        </div>
    </div>
{% schema %}
{
    "name": "Custom-Banner-with-text",
    "settings": [
      {
        "type":"text",
        "id":"heading",
        "label":"enter your heading"
      },
      {
       "type": "image_picker",
       "id": "image",
       "label": "Select Image"
      },
      {
   "type": "text",
   "id": "para",
   "label": "Enter your text"
      },
      {
      "type": "select",
      "id": "vertical_alignment",
      "label": "Vertical alignment",
  "options": [
    {
      "value": "left",
      "label": "Left"
    },
    {
      "value": "middle",
      "label": "Middle"
    },
    {
      "value": "right",
      "label": "Right"
    },
     {
      "value": "left-top",
      "label": "Left-top"
    },
     {
      "value": "middle-top",
      "label": "Middle-top"
    },
    {
      "value": "middle-right",
      "label": "Middle-right"
    },
     {
      "value": "middle-bottom",
      "label": "Middle-bottom"
    },
     {
      "value": "bottom-left",
      "label": "Bottom-left"
    },
     {
      "value": "bottom-right",
      "label": "Bottom-right"
    }
  ],
  "default": "middle"
}

  ],

    "presets": [
    {
      "name": "Custom-Banner-with-text",
      "category": "Custom-Banner-with-text"
    }
  ] 
  }

{% endschema %}
{% style %}
.main_second_section h2{
  text-align:center;
  width:100%;
  max-width:1200px;
  margin:0 auto;
}  
.img_text img{
  width:100%;
}
.img_text{
  position:relative;
}
.img_text .text{
  position: absolute;
}
.alignment_middle{
  top:50%;
  left:50%;
  transform:translate(-50%, -50%);
}
.alignment_left{top:50%;}
.alignment_right{
  top:50%;
  right:0%;
}
.alignment_left-top{
  top:0%;
  left:0px;
}
.alignment_middle-top{
  top:0%;
   left:50%;
  transform:translate(-50%, -50%);
}
.alignment_middle-right{
  top:0%;
  right:0%;
}
.alignment_bottom-left{
  bottom:0%;
  left:0%;
} 
.alignment_middle-bottom{
  bottom:0%;
  left:50%;
  transform:translate(-50%, -50%);
  
}
.alignment_bottom-right{
  bottom:0%;
  right:0%;
}   
{% endstyle  %}